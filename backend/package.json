{
  "name": "fermenter-backend",
  "version": "1.0.0",
  "description": "backend services for fermentor client",
  "author": "Mate Melcher",
  "main": "app.js",
  "scripts": {
    "dev": "app.js",
    "start": "NODE_ENV=production pm2 start app.js --name 'bioreactor' --watch"
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      "app.js",
      "express.js",
      "start.js",
      "models/",
      "routes/",
      "controllers/"
    ],
    "ext": "js",
    "delay": 3000
  },
  "dependencies": {
    "@babel/core": "^7.11.6",
    "@babel/register": "^7.11.5",
    "@babel/preset-env": "^7.24.4",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^7.1.0",
    "mongoose": "^6.0.12",
    "punycode": "^2.3.1",
    "regenerator-runtime": "^0.13.7"
  },
  "devDependencies": {
    "nodemon": "^2.0.15"
  }
}
